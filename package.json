{
  "name": "mikasa",
  "version": "1.0.0",
  "description": "AI-powered code generation CLI with voice support",
  "main": "dist/server/index.js",
  "bin": {
    "mikasa": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev:cli": "ts-node src/cli/index.ts",
    "predev:server": "node scripts/kill-server.js",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "start": "node dist/cli/index.js",
    "prestart:server": "node scripts/kill-server.js",
    "start:server": "node dist/server/index.js",
    "kill-server": "node scripts/kill-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "code-generation",
    "voice",
    "cli",
    "llm",
    "claude",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "axios": "^1.7.9",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "mongoose": "^8.9.3",
    "multer": "^1.4.5-lts.1",
    "node-record-lpcm16": "^1.0.1",
    "ora": "^5.4.1",
    "simple-git": "^3.27.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
